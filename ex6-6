#include <iostream>
using namespace std;

class MyVector{
  int *p;
  int size;
public:
  MyVector(int size = 100){
    int a[size];
    //this -> p = a;
  }
  ~MyVector() { delete [] p; }
};

int main() {
  MyVector *v1, *v2;
  v1 = new MyVector();  // 디폴트로 정수 100개의 배열 동적 할당
  v2 = new MyVector(1024);  // 정수 1024개의 배열 동적 할당

  delete v1;
  delete v2;
}